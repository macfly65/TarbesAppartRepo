{% extends 'base.html.twig' %}
{% block body %}
  <!-- Page Content -->
  <div class="container" style="top: 50px;position: relative;">
    <div class="row">
      <div class="col-lg-3">
        <h1 class="my-4">Nos vins</h1>
        <div class="list-group">
            {% for categ in categories %}
          <a  href="{{ path('front_catalogue',{vin: categ.id}) }}" class="list-group-item">{{categ.nom}}</a>
          {%endfor%}
        </div>
      </div>
      <!-- /.col-lg-3 -->
      <div class="col-lg-9">
        <div id="carouselExampleIndicators" class="carousel slide my-4" data-ride="carousel">
          <ol class="carousel-indicators">
            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
          </ol>
          <div class="carousel-inner" role="listbox">
            <div class="carousel-item active">
              <img class="d-block img-fluid" src="http://placehold.it/900x350" alt="First slide">
            </div>
            <div class="carousel-item">
              <img class="d-block img-fluid" src="http://placehold.it/900x350" alt="Second slide">
            </div>
            <div class="carousel-item">
              <img class="d-block img-fluid" src="http://placehold.it/900x350" alt="Third slide">
            </div>
          </div>
          <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
          </a>
          <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
          </a>
        </div>
        <div class="row">
            {% for catalogue in catalogues %}
                
                
            {% set i = 0 %}    
          <div class="col-lg-4 col-md-6 mb-4">
           <div class="card h-100">                  
               {% for medias in catalogue.catalogueMedias.owner.catalogueMedias %}
               {% set i = i + 1 %}    
               {% if i == 1 %}    
                 <a href="#"><img class="card-img-top" src="{{ asset( medias.nomFichier | imagine_filter('bo_list')) }}" alt=""></a>
              {%endif%}
               {% endfor %}
              <div class="card-body">
                <h4 class="card-title">
                  <a href="#">{{catalogue.nom}}</a>
                </h4>
   
                  
                <h5>{{catalogue.reference}}</h5>
                <p class="card-text">{{catalogue.description}}</p>
              </div>
              <div class="card-footer">
                <small class="text-muted">&#9733; &#9733; &#9733; &#9733; &#9734;</small>
              </div>
            </div>
          </div>
           {%endfor%}
        </div>
      </div>
    </div>
  </div>
{% endblock %}
