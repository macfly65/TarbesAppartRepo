{% extends 'base.html.twig' %}
{% set i = 0 %}
           {% block bandeau %}
    <div class="site-blocks-cover overlay" style="height: calc(30vh);background-image: url('http://127.0.0.1:8000/upload_files/hero_bg_1.jpg');" data-aos="fade" data-stellar-background-ratio="0.5" data-aos="fade">
            {% endblock %}
           {% block bandeauTitle %}
            <h1 class="mb-4 titre">{{actualite.titre}}</h1>
            <p class="mb-5 sousTitre">{{actualite.sousTitre}}</p>
           {% endblock %}

{% block body %}
    <div class="site-section">
    <div class="container">
      <div class="row">
        <div class="col-lg-8">
  
          <figure>
       {% for medias in media %}
        {% set i = i + 1%}
        {%if i == 1%}
        <img src="{{ asset( '/medias_front/actualite/' ~ medias.nomFichier)}}" alt="Image" class="img-fluid">
        {%endif%}
        {%endfor%}
              
            <figcaption>This is an image</figcaption>
          </figure>
  
          {{actualite.texte}}
  
          <div class="pt-5">
            <p>Categories: <a href="{{ path('front_actualite',{page: actualite.categorie.id}) }}">{{actualite.categorie.nom}}</a> Tags: <a href="#">#manila</a>, <a
                href="#">#asia</a></p>
          </div>
  
  
          <div class="pt-5">
            <h3 class="mb-5 text-black">Commentaires :</h3>
            <ul class="comment-list">
                
   {% for commentaire in commentaires %}
              <li class="comment">
                <div class="vcard">
                  <img  src="{{ asset( 'upload_files/person_1.jpg') }}"  alt="Image placeholder">
                </div>
                <div class="comment-body">
                  <h3 class="text-black">{{commentaire.prenom}} {{commentaire.nom}}</h3>
                  <div class="meta">{{commentaire.date|date("m/d/Y")}}</div>
                  <p>{{commentaire.text}}</p>
{#                  <p><a href="#" class="reply rounded">Reply</a></p>#}
                </div>
              </li>
 {%endfor%}
            </ul>
            <!-- END comment-list -->
  
            
            <div class="comment-form-wrap">
              <h3 class="mb-5">Laisse un commentaire</h3>
              
          {{ form_start(formCommentaire) }}

                <div class="form-group">
                        {{ form_row(formCommentaire.nom) }}
                </div>
                <div class="form-group">
                        {{ form_row(formCommentaire.prenom) }}
                </div>
                <div class="form-group">
                        {{ form_row(formCommentaire.email) }}
                </div>
  
                <div class="form-group">
                        {{ form_row(formCommentaire.text) }}
                </div>
                <div class="form-group">
                  <button type="submit" class="btn btn-primary px-4 py-3">Enregistrer</button>
                </div>
            {{ form_end(formCommentaire) }}

            </div>
          </div>
        </div>
  
  
        <div class="col-md-3 ml-auto">
  
          <div class="mb-5">
            <h3 class="h5 text-black mb-3">Publication populaire</h3>
            <ul class="list-unstyled">
               {% for actu in allActu %}
              <li class="mb-2">
                   <a  href="{{ path('fiche_actualite',{id: actu.id}) }}" >
                       {{actu.titre}}
                     </a>
                    </li>
               {% endfor %}              
            </ul>
          </div>
          <div class="mb-5">
            <h3 class="h5 text-black mb-3">Commentaires r√©cents</h3>
            <ul class="list-unstyled">
               {% for comment in allComment %}   
{#                   {{dump(comment)}}#}
             <li class="mb-2"><a href="#">{{comment.prenom}} {{comment.nom}}</a> <em>sur l'article </em> <a href="{{ path('fiche_actualite',{id: comment.actualite.id}) }}">
                      {{comment.actualite.titre}}</a>
              </li>
               {% endfor %}
            </ul>
          </div>
  
        </div>
  
      </div>
    </div>
  </div>
{% endblock %}
    {% block footer %}
            <footer class="site-footer" style="background-color: #f8f9fa !important;margin-top: 160px;">  
      {% endblock %}