{% extends 'base.html.twig' %}
{% block title %}Connexion{% endblock %}
         {% block bandeau %}
    <div class="site-blocks-cover overlay" style="height: calc(30vh);background-image: url('https://127.0.0.1:8000/upload_files/hero_bg_1.jpg');" data-aos="fade" data-stellar-background-ratio="0.5" data-aos="fade">
            {% endblock %}
           {% block bandeauTitle %}
            <h1 class="mb-4 titre">Connexion</h1>
{#            <p class="mb-5 sousTitre">Résidence Évasion</p>
#}    {% endblock %}
{% block body %}
<div id="formWrapper">

<div class="container">
	<form method="post" action="" style="margin: 25px">
    {% for message in app.flashes('notice') %}
    <div class="alert alert-success" style="margin:25px 0px" role="alert">
       {{ message }}
    </div>
      {% endfor %}  
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
    {% if app.user %}
        <div class="mb-3">
            Vous êtes connecté en tant que {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>
    {% endif %}
    <label for="inputEmail">Email</label>
    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" required autofocus>
    <label for="inputPassword">Password</label>
    <input type="password" name="password" id="inputPassword" class="form-control" required>
    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}">
    <button class="btn btn-lg btn-primary" style="margin: 20px 0 0 0;" type="submit">
        Connexion
    </button>
</form>
    <div class="row">
        <div class="col">
            <a href="{{ path('newAccount') }}"><p>Créez votre compte.</p></a>   
            <a href="{{ path('mdpOublie') }}"><p>Mot de passe oublié ?</p></a>   
        </div>
        <div class="col">
        </div>
    </div>
</div>

           
{% endblock %}
{% block footer %}
     <footer class="site-footer" style="background-color: #f8f9fa !important;margin-top: 160px;">  
{% endblock %}
{% block javascripts %}
            {{ encore_entry_script_tags('app') }}
{% endblock %}